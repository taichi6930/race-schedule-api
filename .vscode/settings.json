{
    "prettier.bracketSpacing": true,
    // { } が{}に自動で変換されるのを防ぐために一時的にfalseにしている
    "editor.formatOnSave": false,
    "prettier.configPath": "./.prettier.config.js",
    "prettier.bracketSameLine": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        // For ESLint
        "source.fixAll.eslint": "always",
        // For TSLint
        "source.fixAll.tslint": "always",
        // For Stylelint
        "source.fixAll.stylelint": "always"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "spellright.language": ["en", "ja"],
    "spellright.documentTypes": ["markdown", "latex", "plaintext"]
    ,
    "jest.nodeEnv": {
        "TZ": "Asia/Tokyo"
    }
    ,
    // Run the same script the terminal uses so extension uses pnpm test script
    "jest.jestCommandLine": "pnpm run test --",
    // Use login shell so user's shell init files are sourced (macOS zsh)
    "jest.shell": {
        "path": "/bin/zsh",
        "args": ["-l"]
    },
    // Enable debug logging to inspect spawned env if needed
    "jest.debugMode": true
}
