{
    "name": "cdk-race-schedule-app",
    "version": "0.1.0",
    "bin": {
        "cdk-race-schedule-app": "bin/cdk-race-schedule-app.js"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "wrangler:deploy:production": "wrangler deploy --env production --env-file .env.production",
        "dev:cloudflare:local": "TZ=Asia/Tokyo wrangler dev --env development --local",
        "wrangler:d1:migrations:apply:local": "wrangler d1 migrations apply my-database --local",
        "wrangler:d1:migrations:apply:remote": "wrangler d1 migrations apply my-database --remote",
        "build": "tsc",
        "watch": "tsc -w",
        "s3-data-update": "aws s3 cp s3://race-schedule-bucket/ ./src/gateway/mockData/csv --recursive",
        "test:base-cmd": "sh -c 'if [ \"$1\" = \"--\" ]; then shift; fi; bun x jest --coverage --maxWorkers=6 \"$@\"' --",
        "test": "TZ=jst HTML_FETCH_DELAY_MS=0 bun run test:base-cmd",
        "test:silent": "TZ=jst HTML_FETCH_DELAY_MS=0 bun run test:base-cmd -- --silent",
        "test:watch": "TZ=jst HTML_FETCH_DELAY_MS=0 bun run test:base-cmd -- --watchAll",
        "test:watch:silent": "TZ=jst HTML_FETCH_DELAY_MS=0 bun run test:base-cmd -- --watchAll --silent",
        "test:watch:silent:short": "TZ=jst HTML_FETCH_DELAY_MS=0 IS_SHORT_TEST=TRUE bun run test:base-cmd -- --watchAll --silent",
        "test:watch:silent:largeData": "TZ=jst HTML_FETCH_DELAY_MS=0 IS_LARGE_AMOUNT_DATA_TEST=TRUE bun run test:base-cmd -- --watchAll --silent",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "bunx eslint './test/**/*.ts' './src/**/*.ts' './packages/**/src/**/*.ts'",
        "lint:fix": "bunx eslint --fix './test/**/*.ts' './src/**/*.ts' './packages/**/src/**/*.ts' --ignore-pattern '**/*.d.ts' && prettier --write .",
        "lint:check": "bunx eslint --quiet './test/**/*.ts' './src/**/*.ts' './packages/**/src/**/*.ts'",
        "type-check": "tsc --noEmit",
        "typedoc": "bunx typedoc --out ./docs ./src",
        "pre-commit": "bun run type-check && bun run lint:check && bun run format:check",
        "copy:mock-html": "rm -rf src/gateway/mockData/html && cp -r ./../race-schedule-data/html src/gateway/mockData/html",
        "clean:branches": "git fetch -p && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D",
        "dev:scraping": "bun run --filter @race-schedule/scraping bunx wrangler dev",
        "generate:wrangler": "node ./scripts/generate-wrangler.js",
        "deploy:prod": "node ./scripts/generate-wrangler.js && pnpm exec wrangler deploy --env production --env-file .env.production"
    },
    "engines": {
        "node": ">=24.0.0 <25.0.0"
    },
    "overrides": {
        "qs": "6.14.1",
        "esbuild": "0.25.0",
        "undici": ">=5.28.4",
        "diff": ">=5.2.0"
    },
    "dependencies": {
        "@types/express": "^5.0.6",
        "better-sqlite3": "12.6.2",
        "cheerio": "^1.2.0",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "express": "^5.2.1",
        "googleapis": "^171.0.0",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260130.0",
        "@eslint/js": "^9.39.2",
        "@swc/core": "^1.15.10",
        "@swc/jest": "^0.2.39",
        "@types/better-sqlite3": "^7.6.13",
        "@types/jest": "^30.0.0",
        "@types/node": "25.1.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsdoc": "^62.4.0",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unicorn": "^62.0.0",
        "eslint-plugin-unused-imports": "^4.3.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-html-reporters": "^3.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.16",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.53.1",
        "wrangler": "^4.61.1"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "bun run lint:fix"
        ]
    }
}
