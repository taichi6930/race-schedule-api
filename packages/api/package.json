{
    "name": "@race-schedule/api",
    "version": "0.1.0",
    "description": "Race Schedule API Service",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "dev": "wrangler dev --env development --local",
        "dev:local": "wrangler dev --env development --local",
        "dev:test": "wrangler dev --env test --local",
        "dev:production": "wrangler dev --env production --local",
        "deploy:production": "wrangler deploy --env production",
        "test": "vitest --config=vitest.config.ts",
        "test:watch": "vitest --config=vitest.config.ts --watch",
        "lint": "eslint './src/**/*.ts'",
        "lint:fix": "eslint --fix './src/**/*.ts'"
    },
    "dependencies": {
        "@race-schedule/shared": "workspace:*",
        "tsyringe": "^4.10.0",
        "zod": "^4.3.5"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260103.0",
        "@types/node": "^25.0.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "~5.9.3",
        "vitest": "^4.0.16",
        "wrangler": "^4.1.0"
    }
}
