{
    "name": "@race-schedule/api",
    "version": "0.1.0",
    "description": "Race Schedule API Service",
    "main": "./dist/index.js",
    "scripts": {
        "dev": "wrangler dev --local",
        "migrations:apply:local": "bunx wrangler d1 migrations apply race-schedule-db --local --config packages/api/wrangler.toml",
        "deploy:local": "TZ=Asia/Tokyo wrangler dev --local --persist-to ../db",
        "deploy:test": "TZ=Asia/Tokyo wrangler deploy --env test",
        "deploy:production": "TZ=Asia/Tokyo wrangler deploy --env production",
        "test": "vitest --config=vitest.config.ts",
        "test:watch": "vitest --config=vitest.config.ts --watch",
        "lint": "eslint './src/**/*.ts'",
        "lint:fix": "eslint --fix './src/**/*.ts'"
    },
    "dependencies": {
        "@race-schedule/shared": "workspace:*",
        "tsyringe": "^4.10.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20260130.0",
        "@types/node": "^25.1.0",
        "typescript": "~5.9.3",
        "vitest": "^4.0.18",
        "wrangler": "^4.60.0"
    }
}
