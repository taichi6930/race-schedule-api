{
    "name": "@race-schedule/batch",
    "version": "0.1.0",
    "description": "Batch processing scripts",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint './src/**/*.ts'",
        "lint:fix": "eslint --fix './src/**/*.ts'",
        "deploy": "wrangler deploy",
        "deploy:test": "wrangler deploy --env test",
        "deploy:prod": "wrangler deploy --env production",
        "dev": "wrangler dev",
        "tail": "wrangler tail",
        "trigger": "wrangler dev --test-scheduled"
    },
    "dependencies": {
        "@race-schedule/shared": "workspace:*",
        "@race-schedule/db": "workspace:*",
        "better-sqlite3": "12.6.2",
        "dotenv": "^17.2.3",
        "googleapis": "^170.1.0"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^25.0.10",
        "typescript": "~5.9.3"
    }
}
